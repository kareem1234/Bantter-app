<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bantter.app" version="0.0.1" xmlns:gap="http://phonegap.com/ns/1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bantter</name>
    <description>
        Social 
    </description>
    <author email="bantter.llc@gmail.com" href="http://www.bantter.com/">
        Bantter app team
    </author>
    <preference name="SplashScreen" value="screen1" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="1.5" />
    <preference name="SuppressesIncrementalRendering" value="true" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="orientation" value="portrait" />
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-navigation href="http://*/*" />
     <platform name="android">
        <preference name="KeepRunning" value="true"/>
         <preference name="Fullscreen" value="false" />
         <preference name="android-windowSoftInputMode" value="adjustNothing" />
    </platform>
</widget>
